# TheEyeBall Backend Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=${NODE_ENV}
PORT=${PORT}

# JWT Configuration
JWT_SECRET=${JWT_SECRET}
APP_NAME=${APP_NAME}

# Database Configuration
DB_USER=${DB_USER}
DB_PWD=${DB_PWD}
#DB_NAME=theeyeball
DB_NAME=${DB_NAME}
MONGODB_URI=mongodb+srv://${DB_USER}:${DB_PWD}@nodejs.tk4ldce.mongodb.net/${DB_NAME}?retryWrites=true&w=majority&appName=NodeJS

# External API Configuration
TMDB_API_KEY=${TMDB_API_KEY}
TMDB_BASE_URL=${TMDB_BASE_URL}

# TMDB API Configuration (Resource Paths)
TMDB_HOST=${TMDB_HOST}
API_VERSION=${API_VERSION}
PATH_UPCOMING_MOVIE=${PATH_UPCOMING_MOVIE}
PATH_NOW_PLAYING=${PATH_NOW_PLAYING}
PATH_TOP_RATED=${PATH_TOP_RATED}

# Security Configuration
BCRYPT_ROUNDS=${BCRYPT_ROUNDS}
SESSION_SECRET=${SESSION_SECRET}

# Logging Configuration
LOG_LEVEL=${LOG_LEVEL}

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=${RATE_LIMIT_WINDOW_MS}
RATE_LIMIT_MAX_REQUESTS=${RATE_LIMIT_MAX_REQUESTS}
AUTH_RATE_LIMIT_MAX_REQUESTS=${AUTH_RATE_LIMIT_MAX_REQUESTS}

# CORS Configuration (for development)
CORS_ORIGIN=${CORS_ORIGIN}

# Production specific (uncomment for production)
# NODE_ENV=production
# LOG_LEVEL=info
# CORS_ORIGIN=https://your-frontend-domain.com
JWT_EXPIRES_IN=${JWT_EXPIRES_IN}
